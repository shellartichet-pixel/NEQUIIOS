<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comprobante_background"
    android:hardwareAccelerated="true"
    android:layerType="hardware"
    android:cacheColorHint="@android:color/transparent"
    android:fitsSystemWindows="false">

    <!-- ScrollView para mostrar foto completa desde arriba sin espacios blancos -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:fitsSystemWindows="false">

        <!-- Imagen del voucher - foto completa que se adapta a todos los DPI -->
        <ImageView
            android:id="@+id/ivVoucherHQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            android:contentDescription="Comprobante de pago"
            android:filterTouchesWhenObscured="false"
            android:layerType="hardware"
            android:cacheColorHint="@android:color/transparent"
            android:alpha="1.0"
            android:visibility="gone" />
    </ScrollView>

    <!-- Botón invisible para "Listo" (zona inferior) -->
    <View
        android:id="@+id/btnListoInvisible"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.0" />

    <!-- Botón invisible para "Compartir" (esquina superior derecha) -->
    <View
        android:id="@+id/btnCompartirInvisible"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.0" />

</FrameLayout>
