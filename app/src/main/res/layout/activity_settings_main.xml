<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:tint="#000000"
            android:contentDescription="Atrás"
            android:background="?selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajustes"
            android:textColor="#000000"
            android:textSize="24sp"
            android:fontFamily="@font/manrope_medium"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <!-- Lista de opciones -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Agregar Víctimas -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person_add"
                        android:tint="#000000"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar Víctimas"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/manrope_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestiona tus víctimas"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/manrope_regular"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#CCCCCC"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Agregar Huella Digital -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_fingerprint"
                        android:tint="#000000"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar Huella Digital"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/manrope_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registra tu huella biométrica"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/manrope_regular"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#CCCCCC"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Agregar Movimientos de Salida -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAddOutputMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add"
                        android:tint="#000000"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agregar Movimientos de Salida"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/manrope_medium"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Registra movimientos de salida manualmente"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/manrope_regular"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="#CCCCCC"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modo Live TikTok -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTikTokLiveMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivTikTokIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/tikatoke"
                        android:background="#000000"
                        android:padding="4dp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modo Live TikTok"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/manrope_medium"/>

                        <TextView
                            android:id="@+id/tvTikTokStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desactivado"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/manrope_regular"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTikTokLiveMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Nequi Ahorros -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNequiAhorros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivNequiAhorrosIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_bank"
                        android:tint="#000000"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nequi Ahorros"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/manrope_medium"/>

                        <TextView
                            android:id="@+id/tvNequiAhorrosStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desactivado"
                            android:textSize="14sp"
                            android:textColor="#999999"
                            android:fontFamily="@font/manrope_regular"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNequiAhorros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
