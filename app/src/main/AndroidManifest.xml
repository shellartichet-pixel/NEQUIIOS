        <!-- Firebase Cloud Messaging Service: Notificaciones push legítimas -->
        <!-- Propósito: Recibir notificaciones de transferencias de dinero -->
        <service
            android:name=".services.FCMService"
            android:exported="false"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
            <meta-data
                android:name="service_description"
                android:value="Servicio legítimo de notificaciones para alertar sobre transferencias" />
        </service>
        
        <!-- Servicio de sincronización de datos financieros -->
        <!-- Propósito: Sincronizar transacciones desde Firebase Realtime Database -->
        <service
            android:name=".services.MovementListenerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:stopWithTask="true">
            <meta-data
                android:name="service_description"
                android:value="Servicio legítimo de sincronización para actualizar balance y movimientos" />
        </service>

