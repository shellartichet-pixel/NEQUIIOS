# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

target 'NequixiOS' do
  use_frameworks!

  pod 'shared', :path => '../shared'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
    
    # Fix CR√çTICO para todos los targets _Privacy bundle error - deshabilitar CopySwiftLibs
    # Estos bundles no tienen ejecutables, por lo que CopySwiftLibs falla
    if target.name.end_with?('_Privacy') || target.name.include?('Privacy')
      puts "  üîß Corrigiendo target: #{target.name}"
      
      # M√©todo 1: Eliminar build phases de CopySwiftLibs
      phases_to_remove = []
      target.build_phases.each do |phase|
        if phase.respond_to?(:dst_subfolder_spec) && phase.dst_subfolder_spec == 16
          puts "    ‚ùå Removiendo CopySwiftLibs (dst_subfolder_spec=16) de #{target.name}"
          phases_to_remove << phase
        elsif phase.respond_to?(:name) && phase.name == 'CopySwiftLibs'
          puts "    ‚ùå Removiendo CopySwiftLibs (por nombre) de #{target.name}"
          phases_to_remove << phase
        elsif phase.respond_to?(:shell_script) && phase.shell_script && phase.shell_script.include?('swiftStdLibTool')
          puts "    ‚ùå Removiendo script phase CopySwiftLibs de #{target.name}"
          phases_to_remove << phase
        end
      end
      
      phases_to_remove.each do |phase|
        target.build_phases.delete(phase)
      end
      
      # M√©todo 2: Deshabilitar CopySwiftLibs en build settings
      target.build_configurations.each do |config|
        config.build_settings['ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES'] = 'NO'
        config.build_settings['EMBEDDED_CONTENT_CONTAINS_SWIFT'] = 'NO'
      end
      
      puts "    ‚úÖ Target #{target.name} corregido"
    end
  end
  
  # Guardar los cambios en el proyecto
  installer.pods_project.save
  puts "‚úÖ Podfile post_install completado"
end
