# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

target 'NequixiOS' do
  use_frameworks!

  pod 'shared', :path => '../shared'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
    
    # Fix para todos los targets _Privacy bundle error - deshabilitar CopySwiftLibs
    # Estos bundles no tienen ejecutables, por lo que CopySwiftLibs falla
    if target.name.end_with?('_Privacy')
      puts "  Corrigiendo target: #{target.name}"
      # Obtener todos los build phases
      phases_to_remove = []
      target.build_phases.each_with_index do |phase, index|
        # Buscar CopySwiftLibs por tipo y dst_subfolder_spec
        if phase.respond_to?(:dst_subfolder_spec) && phase.dst_subfolder_spec == 16
          puts "    Removiendo CopySwiftLibs (dst_subfolder_spec=16) de #{target.name}"
          phases_to_remove << phase
        elsif phase.respond_to?(:name) && phase.name == 'CopySwiftLibs'
          puts "    Removiendo CopySwiftLibs (por nombre) de #{target.name}"
          phases_to_remove << phase
        end
      end
      # Eliminar los phases
      phases_to_remove.each do |phase|
        target.build_phases.delete(phase)
      end
    end
  end
  
  # Guardar los cambios en el proyecto
  installer.pods_project.save
end
